/* pages/clouds/clouds.wxss */
.recommendVideoList {
    width: 90%;
    position: relative;
    left: 0;
    right: 0;
    margin: auto;
    margin-bottom: 20rpx;
}

.recommendVideoList .recommendVideoItem {
    padding-top: 20rpx;
}

.recommendVideoList .recommendVideoItem .previewImg {
    width: 100%;
    height: 450rpx;
    border-radius: 40rpx;
}

.recommendVideoList .recommendVideoItem .recommendVideoMess {
    display: flex;
}

.recommendVideoList .recommendVideoItem .recommendVideoMess .authorImg {
    height: 80rpx;
    width: 80rpx;
    border-radius: 50%;
}

.recommendVideoList .recommendVideoItem .recommendVideoMess .xxRecommendVideoMess {
    width: 80%;
    padding-left: 20rpx;
}

.recommendVideoList .recommendVideoItem .recommendVideoMess .xxRecommendVideoMess .authorName {
    font-size: 26rpx;
}

.recommendVideoList .recommendVideoItem .recommendVideoMess .xxRecommendVideoMess .recommendVideoTitle {
    font-size: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}